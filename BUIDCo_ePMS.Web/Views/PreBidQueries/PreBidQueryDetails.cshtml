<script>
    $(document).ready(function () {
        var id = getUrlVars()["Id"];
        //alert(id);
        GetPreBidQueries(id);

    });
    function getUrlVars() {
        var vars = {};
        var parts = window.location.href.replace(/[?&]+([^=&]+)=([^&]*)/gi, function (m, key, value) {
            vars[key] = decodeURIComponent(value);
        });
        return vars;
    };
      function GetPreBidQueries(ele) {
  $.ajax({
    type: "Get",
    dataType: "json",
    url: '@Url.Action("GetPreBidQueriesById", "PreBidQueries")',
      data: { "Id": ele },
    success: function (Result) {
        var data = JSON.parse(Result);
        $(".clsletterno").text(data.letterNo);
        $('.clsproposeby').text(data.clientName);
        $('.clsprojectcode').text(data.projectCode);
        $('.clsprojectname').text(data.projectName);
        $('.clscontarctarea').text(data.constructionArea);
        $('.clslength').text(data.length);
        $('.clsestamt').text("₹"+data.emdAmount);
        $('.clsopening').text(data.openingDate);
        $('.clssubmissiondt').text(data.submissionDate);
        $('.clsnitdoc').html('<a href="@Url.Action("DownloadPdf","Tender")?fileName=' + data[0].nitDocFileName +'" data-bs-toggle="tooltip" title="Download"> <i class="bi bi-file-earmark-pdf ms-2 text-danger"></i> </a>');

    },
    error: function (Message) {
        alert(Message);
    }
});

    }
</script>