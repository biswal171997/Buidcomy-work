<script>
    $(document).ready(function () {
        var id = getUrlVars()["tenderid"];
        //alert(id);
        BidderDetailsById(id);
    });
    function getUrlVars() {
        var vars = {};
        var parts = window.location.href.replace(/[?&]+([^=&]+)=([^&]*)/gi, function (m, key, value) {
            vars[key] = decodeURIComponent(value);
        });
        return vars;
    }
 function BidderDetailsById(ele) {
    $.ajax({
      type: "Get",
      dataType: "json",
      url: '@Url.Action("BidderDetailsById", "Bidders")',
        data: { "Id": ele },
        success: function (data) {
            debugger
          $(".clsletterno").text(data[0].letterNo);
          $('.clsproposeby').text(data[0].clientName);
          $('.clsprojectcode').text(data[0].projectCode);
          $('.clsprojectname').text(data[0].projectName);
          $('.clscontarctarea').text(data[0].constructionArea);
          $('.clslength').text(data[0].length);
          $('.clsestamt').text("₹"+data[0].emdAmount);
          $('.clsopening').text(data[0].openingDate);
          $('.clssubmissiondt').text(data[0].submissionDate);
            $('.clsnitdoc').html('<a href="@Url.Action("DownloadPdf","Tender")?fileName=' + data[0].nitDocFileName +'" data-bs-  toggle="tooltip" title="Download"> <i class="bi bi-file-earmark-pdf ms-2 text-danger"></i>NIT Document</a>');
            $('.bidamount').text(data[0].amount);
            $("#tbl_biddername tbody").empty();
            var rows = "";
            for (var i = 0; i < data.length; i++) { 
                rows += '<tr>';
                rows += '<td>' + (i+1) + '</td>'; 
                rows += '<td>' + data[i].bidderName + '</td>'; 
                rows += '</tr>'; 
            }
            $("#tbl_biddername tbody").append(rows);
      },
      error: function (Message) {
          alert(Message);
      }
});

    }
</script>