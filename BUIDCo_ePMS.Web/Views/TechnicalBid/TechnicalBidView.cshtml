<script>
    $(document).ready(function () {
        $(".datepicker").datepicker({
            dateFormat: 'dd-M-yy'
        }).on('keydown', function (event) {
            event.preventDefault();
        });

        $("#formId").validate({
            rules: {
                projectId: { required: true },
                technicalDate: { required: true },
                technicalDocPath: {
                    required: function () {
                        return $("#hdntechnicalfile").val() == "";
                    }
                },
