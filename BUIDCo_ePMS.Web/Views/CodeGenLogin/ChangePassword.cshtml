@{
    ViewData["Title"] = "ChangePassword";
}
<div class="page-body">
    <!-- breadcrumb section -->
    <div class="d-flex align-items-center justify-content-between mb-4 flex-wrap gap-3">
        <nav aria-label="breadcrumb">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Dashboard/DashboardLanding" title="Home"><i class="bi bi-house"></i></a></li>
                <li class="breadcrumb-item active" title="Change Password" aria-current="page"> Change Password </li>
            </ul>
        </nav>
    </div>
    <!-- breadcrumb section -->
    <!-- inner body section -->
    <div class="body__content">
        <div class="body__bg">
            <form autocomplete="off">
                <div class="form-group">
                    <div class="row">
                        <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-4 col-12">  Current Password  <span class="text-danger"> * </span> </div>
                        <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-5 col-12">
                            <input type="text" class="form-control" placeholder="Current Password">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-4 col-12">  New Password  <span class="text-danger"> * </span> </div>
                        <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-5 col-12">
                            <input type="text" class="form-control" placeholder="New Password">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-4 col-12">  Confirm Password  <span class="text-danger"> * </span> </div>
                        <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-5 col-12">
                            <input type="text" class="form-control" placeholder="Confirm Password">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-xxl-2 col-xl-3 col-lg-3 col-md-3 col-12">  &nbsp; </div>
                        <div class="col-xxl-3 col-xl-4 col-lg-4 col-md-5 col-12">
                            <button type="button" class="btn btn-primary me-2"> Submit </button>
                            <button type="button" class="btn btn-light-danger"> Reset </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- inner body section -->
    </div>
</div>